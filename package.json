    "@types/express": "^4.17.6",
    "@types/find": "^0.2.1",
    "@types/hapi__joi": "^17.1.3",
    "@types/helmet": "0.0.47",
    "@types/jasmine": "^3.5.10",
    "@types/jsonfile": "^6.0.0",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/lodash": "^4.14.155",
    "@types/morgan": "^1.9.0",
    "@types/node": "^14.0.12",
    "@types/supertest": "^2.0.9",
    "case-sensitive-paths-webpack-plugin": "^2.3.0",
    "cors": "^2.8.5",
